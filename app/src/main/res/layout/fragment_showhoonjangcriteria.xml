<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_white_transparent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="80dp"
        android:weightSum="8">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_icons_close"
            android:background="#00ff0000"
            android:layout_gravity="end"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"
                android:text="훈장의 기준이 궁금해~?"
                android:fontFamily="@font/typo_sherlock_b"
                android:layout_weight="8"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="7"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="레벨 1"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="레벨 2"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="레벨 3"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="출석왕"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="누적 출석일\n30일"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="100일"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="365일"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="다독왕"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="읽은 지문\n50개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="100개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="150개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="출제왕"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="만든 퀴즈 수\n30개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="60개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="100개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="문제 사냥꾼"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="푼 문제 수\n50개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="100개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="150개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="폭탄마스터"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="해체한 폭탄 수\n30개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="60개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="100개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4.5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="협동왕"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="완성한 퀴즈 버킷 수\n10개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="20개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="30개"
                    android:textSize="20dp"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:gravity="center"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>