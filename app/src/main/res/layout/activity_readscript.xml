<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="20">

                <ImageButton
                    android:id="@+id/home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icons_go_to_home"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:background="#00ff0000"
                    android:padding="0dp"/>

                <ImageButton
                    android:id="@+id/save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icons_temp_storage"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:background="#00ff0000"
                    android:padding="0dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:text="이 지문을"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_icons_clock"
                    android:layout_gravity="center"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:fontFamily="@font/typo_sherlock_b"
                    android:textSize="27dp"
                    android:text="40"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:fontFamily="@font/typo_sherlock_l"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:text="초에 읽었습니다"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_margin="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textview_script_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:textSize="20dp"
                    android:typeface="serif"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textview_script_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:textSize="20dp"
                    android:typeface="serif"
                    android:textColor="@color/black"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>