<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="650dp"
    android:layout_height="500dp"
    android:background="@drawable/black_transparent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buttonClose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:padding="5dp"
                    android:src="@drawable/ic_icons_white_x" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="right|center"
                android:text="배틀수업 게임"
                android:textColor="#FF0000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="left|center"
                android:text=" 은, 제한 시간 내로 정답을 맞추지 못하면 하트가 깎이고,"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="right|center"
                android:text="끝날때 친구보다"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="center"
                android:text="하트"
                android:textColor="@color/blue"
                android:textSize="22dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="left|center"
                android:text="가 많으면 이길 수 있는 게임이야."
                android:textColor="@color/white"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="right|center"
                android:text="웅진이가 직접 방을 만들어"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="center"
                android:text="퀴즈"
                android:textColor="#FF5722"
                android:textSize="22dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="left|center"
                android:text="를 만들고 또 친구가 만든 문제를"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="right|center"
                android:text="풀수있어.  하트를 잃지않게 해서"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="center"
                android:text="웅머니"
                android:textColor="#4CAF50"
                android:textSize="22dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="@font/bmjua_ttf"
                android:gravity="left|center"
                android:text="를 벌어보자."
                android:textColor="@color/white"
                android:textSize="22dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:fontFamily="@font/bmjua_ttf"
            android:gravity="center"
            android:text="행운을 빌어~!"
            android:textColor="@color/yellow"
            android:textSize="22dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>