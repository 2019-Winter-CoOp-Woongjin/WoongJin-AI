<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="18"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:background="@drawable/green_board"
            android:padding="30dp">

            <TextureView
                android:id="@+id/surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Solution"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/filet_white"
            android:orientation="vertical"
            android:padding="30dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="194dp"
                    android:layout_height="71dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/bmjua_ttf"
                    android:gravity="center"
                    android:text="해설 입력"
                    android:textColor="@color/orange"
                    android:textSize="30dp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/contentSelectHint"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/bmjua_ttf"
                        android:gravity="center"
                        android:text="영상 촬영시 유의사항"
                        android:textColor="@color/orange"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/bmjua_ttf"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/border"
                        android:text="@string/video_hint"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/record"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#E4FF9800"
                            android:fontFamily="@font/bmjua_ttf"
                            android:onClick="onCaptureClick"
                            android:text="녹화하기"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/goBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#28ACA5A5"
                    android:fontFamily="@font/bmjua_ttf"
                    android:textSize="20dp"
                    android:text="돌아가기" />

                <Button
                    android:id="@+id/choose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#28ACA5A5"
                    android:fontFamily="@font/bmjua_ttf"
                    android:textSize="20dp"
                    android:text="영상선택" />

                <Button
                    android:id="@+id/check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="#28ACA5A5"
                    android:fontFamily="@font/bmjua_ttf"
                    android:textSize="20dp"
                    android:text="제출하기" />



            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>