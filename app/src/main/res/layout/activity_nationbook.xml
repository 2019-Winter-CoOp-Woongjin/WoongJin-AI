<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightorange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_icons_go_to_home"
                android:background="#00ff0000"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/tempSave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_icons_temp_storage"
                android:background="#00ff0000"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:src="@drawable/ic_icons_step1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:weightSum="23">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"></LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/bot"
                android:layout_weight="5"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_icons_speech_bubble2"
                android:text="어떤 종류의 책을 읽어볼까?"
                android:textSize="40dp"
                android:fontFamily="@font/typo_sherlock_b"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="14"
                android:padding="20dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:background="@drawable/rounded_white"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/science"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="과학"
                        android:textSize="50dp"
                        android:fontFamily="@font/typo_sherlock_b"
                        android:background="#00ff0000"/>

                    <Button
                        android:id="@+id/history"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="역사"
                        android:textSize="50dp"
                        android:fontFamily="@font/typo_sherlock_b"
                        android:background="#00ff0000"/>

                    <Button
                        android:id="@+id/news"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="어린이 시사"
                        android:textSize="50dp"
                        android:fontFamily="@font/typo_sherlock_b"
                        android:background="#00ff0000"/>

                    <Button
                        android:id="@+id/morality"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="도덕"
                        android:textSize="50dp"
                        android:fontFamily="@font/typo_sherlock_b"
                        android:background="#00ff0000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/mistery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="미스터리"
                        android:textSize="50dp"
                        android:fontFamily="@font/typo_sherlock_b"
                        android:background="#00ff0000"/>

                    <Button
                        android:id="@+id/comics"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="만화"
                        android:textSize="50dp"
                        android:fontFamily="@font/typo_sherlock_b"
                        android:background="#00ff0000"/>

                    <Button
                        android:id="@+id/oldstory"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="동화"
                        android:textSize="50dp"
                        android:fontFamily="@font/typo_sherlock_b"
                        android:background="#00ff0000"/>

                    <Button
                        android:id="@+id/greatman"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="위인전"
                        android:textSize="50dp"
                        android:fontFamily="@font/typo_sherlock_b"
                        android:background="#00ff0000"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>