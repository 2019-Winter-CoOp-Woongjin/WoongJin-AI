<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/go_to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icons_go_to_home" />

        <ImageView
            android:id="@+id/temp_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/go_to_home"
            android:src="@drawable/ic_icons_temp_storage" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/progress_level_orange1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icons_progress_level_orange" />

        <ImageView
            android:id="@+id/progress_dotted_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/progress_level_orange1"
            android:src="@drawable/ic_icons_progress_dotted_orange" />

        <ImageView
            android:id="@+id/progress_level_orange2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/progress_dotted_orange"
            android:src="@drawable/ic_icons_progress_level_orange" />

        <ImageView
            android:id="@+id/progress_dotted_grey1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/progress_level_orange2"
            android:src="@drawable/ic_icons_progress_dotted_grey" />

        <ImageView
            android:id="@+id/progress_level_grey1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/progress_dotted_grey1"
            android:src="@drawable/ic_icons_progress_level_grey" />

        <ImageView
            android:id="@+id/progress_dotted_grey2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/progress_level_grey1"
            android:src="@drawable/ic_icons_progress_dotted_grey" />

        <ImageView
            android:id="@+id/progress_level_grey2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/progress_dotted_grey2"
            android:src="@drawable/ic_icons_progress_level_grey" />

        <ImageView
            android:id="@+id/progress_dotted_grey3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/progress_level_grey2"
            android:src="@drawable/ic_icons_progress_dotted_grey" />


        <ImageView
            android:id="@+id/flag_hand"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/progress_dotted_grey3"
            android:src="@drawable/ic_icons_flag_hand" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/icon"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:weightSum="9">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/note_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="4"
                android:src="@drawable/ic_icons_note_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icons_question_mark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="나만의 단어장"
                        android:textSize="25dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/wordlist"/>

                </LinearLayout>

            </LinearLayout>




        </FrameLayout>

        <LinearLayout
            android:id="@+id/spring"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/note_left"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:id="@+id/spring1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_icons_spring" />

            <ImageView
                android:id="@+id/spring2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/spring1"
                android:layout_weight="1"
                android:src="@drawable/ic_icons_spring" />

            <ImageView
                android:id="@+id/spring3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/spring2"
                android:layout_weight="1"
                android:src="@drawable/ic_icons_spring" />

            <ImageView
                android:id="@+id/spring4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/spring3"
                android:layout_weight="1"
                android:src="@drawable/ic_icons_spring" />

            <ImageView
                android:id="@+id/spring5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignBottom="@id/spring4"
                android:layout_weight="1"
                android:src="@drawable/ic_icons_spring" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <ImageView
            android:id="@+id/note_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/spring"
            android:layout_weight="4"
            android:src="@drawable/ic_icons_note_right" />

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>