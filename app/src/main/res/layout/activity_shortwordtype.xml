<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nationbook_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/go_home"
                android:scaleType="centerCrop"
                android:padding="40dp"
                android:background="#00ff0000"
                android:layout_weight="2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:src="@drawable/steps"
                android:scaleType="centerCrop"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:weightSum="11">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nationbook_board"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/nationbook_board"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bmjua_ttf"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="5.5"
            android:weightSum="20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <FrameLayout
                android:id="@+id/contentShowScriptShortword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:background="@drawable/selectbook_board">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:orientation="horizontal"
                        android:paddingEnd="70dp"
                        android:paddingStart="70dp"
                        android:paddingTop="70dp"
                        android:paddingBottom="30dp"
                        android:weightSum="21">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="13"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:weightSum="15"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3.5"
                                    android:text="난이도 선택"
                                    android:textSize="30dp"
                                    android:fontFamily="@font/bmjua_ttf"
                                    android:textColor="@color/white"
                                    android:gravity="center_vertical" />

                                <ImageView
                                    android:id="@+id/star1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/star_empty"
                                    android:scaleType="centerInside"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp" />

                                <ImageView
                                    android:id="@+id/star2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/star_empty"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp" />

                                <ImageView
                                    android:id="@+id/star3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/star_empty"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp" />

                                <ImageView
                                    android:id="@+id/star4"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/star_empty"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp" />

                                <ImageView
                                    android:id="@+id/star5"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/star_empty"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6.5"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"/>

                            <EditText
                                android:id="@+id/quiz"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:hint="퀴즈 내용 입력하기"
                                android:fontFamily="@font/bmjua_ttf"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:textSize="30dp"
                                android:textColorHint="@color/lightgray"
                                style="@style/EditText"
                                android:theme="@style/EditText"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"/>

                            <EditText
                                android:id="@+id/ans"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:hint="정답 입력하기"
                                android:padding="5dp"
                                android:gravity="center"
                                android:textSize="30dp"
                                android:fontFamily="@font/bmjua_ttf"
                                android:background="@color/white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:id="@+id/Solution"
                            android:orientation="vertical"
                            android:weightSum="4">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="힌트 입력"
                                android:textSize="30dp"
                                android:textColor="@color/orange"
                                android:fontFamily="@font/bmjua_ttf"
                                android:gravity="center"/>

                            <FrameLayout
                                android:id="@+id/contentSelectHint"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:weightSum="3"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/hintWriting"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text="글로 힌트 주기"
                                        android:fontFamily="@font/bmjua_ttf"
                                        android:textSize="30dp"
                                        android:background="@color/white"
                                        android:layout_margin="10dp"/>

                                    <Button
                                        android:id="@+id/hintVideo"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:text="영상 힌트 주기"
                                        android:textSize="30dp"
                                        android:fontFamily="@font/bmjua_ttf"
                                        android:background="@color/white"
                                        android:layout_margin="10dp"/>

                                    <Button
                                        android:id="@+id/noHint"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:textSize="30dp"
                                        android:text="힌트 없음"
                                        android:fontFamily="@font/bmjua_ttf"
                                        android:background="@color/white"
                                        android:layout_margin="10dp"/>

                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="6">

                        <ImageButton
                            android:id="@+id/script"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#00ff0000"
                            android:src="@drawable/read_script"
                            android:scaleType="centerCrop"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"/>

                        <ImageButton
                            android:id="@+id/check"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#00ff0000"
                            android:src="@drawable/finish_making"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>