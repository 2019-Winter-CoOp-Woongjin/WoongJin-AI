<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Package_4_6_Chat.ChatReadyActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/chat_ready_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2.5"
        >


        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="100dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="채팅방 입장 또는 새로 만들기"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/bmjua_ttf"/>

            <EditText
                android:id="@+id/user_chatName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="22sp"
                android:hint="방 이름"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_marginLeft="300dp"
                android:fontFamily="@font/bmjua_ttf"/>

            <EditText
                android:id="@+id/user_Name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="22sp"
                android:hint="친구 닉네임"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginRight="270dp"
                android:fontFamily="@font/bmjua_ttf"/>


            <Button
                android:id="@+id/entering_chat"
                android:layout_width="90dp"
                android:padding="5dp"
                android:layout_marginBottom="20dp"
                android:layout_height="50dp"
                android:background="@drawable/button_chatin"
                android:textStyle="bold"
                android:text="입장"
                android:fontFamily="@font/bmjua_ttf"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:paddingRight="30dp"
            android:paddingBottom="30dp"
            android:paddingTop="34dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="현재 개설된 채팅방"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/bmjua_ttf"/>
            <ListView
                android:layout_marginTop="0dp"
                android:id="@+id/chat_list"
                android:layout_marginLeft="240dp"
                android:layout_marginRight="240dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>