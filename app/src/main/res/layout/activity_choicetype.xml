<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_book_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/go_home"
                android:scaleType="centerCrop"
                android:padding="40dp"
                android:background="#00ff0000"
                android:layout_weight="2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:src="@drawable/steps"
                android:scaleType="centerCrop"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:weightSum="11">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/nationbook_board"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bmjua_ttf"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/MakeQuiz"
            android:orientation="horizontal"
            android:layout_weight="5.5"
            android:weightSum="20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <FrameLayout
                android:id="@+id/contentShowScriptChoice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18">

                <LinearLayout
                    android:layout_width="1050dp"
                    android:layout_height="438dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/green_board" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:orientation="horizontal"
                        android:paddingStart="110dp"
                        android:paddingTop="70dp"
                        android:paddingEnd="100dp"
                        android:paddingBottom="30dp"
                        android:weightSum="21">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="13"
                            android:orientation="vertical"
                            android:weightSum="5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="15">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3.5"
                                    android:fontFamily="@font/bmjua_ttf"
                                    android:gravity="center_vertical"
                                    android:text="난이도 선택"
                                    android:textColor="@color/white"
                                    android:textSize="30dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3" />

                                <ImageView
                                    android:id="@+id/star1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/star_empty" />

                                <ImageView
                                    android:id="@+id/star2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/star_empty" />

                                <ImageView
                                    android:id="@+id/star3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/star_empty" />

                                <ImageView
                                    android:id="@+id/star4"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/star_empty" />

                                <ImageView
                                    android:id="@+id/star5"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="3dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/star_empty" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6.2" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <TextView
                                    android:id="@+id/problemComment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center|center_vertical"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:fontFamily="@font/bmjua_ttf"
                                    android:text=""
                                    android:textColor="@android:color/white"
                                    android:textSize="25dp" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/quiz"
                                style="@style/EditText"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:fontFamily="@font/bmjua_ttf"
                                android:hint="퀴즈 내용 입력하기"
                                android:textColor="@color/white"
                                android:textColorHint="@color/lightgray"
                                android:textSize="30dp"
                                android:theme="@style/EditText" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.3" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.2"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <EditText
                                        android:id="@+id/ans1"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:fontFamily="@font/bmjua_ttf"
                                        android:gravity="center"
                                        android:hint="1. 정답 입력하기"
                                        android:textSize="20dp" />

                                    <EditText
                                        android:id="@+id/ans3"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:fontFamily="@font/bmjua_ttf"
                                        android:gravity="center"
                                        android:hint="3. 정답 입력하기"
                                        android:textSize="20dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <EditText
                                        android:id="@+id/ans2"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:fontFamily="@font/bmjua_ttf"
                                        android:gravity="center"
                                        android:hint="2. 정답 입력하기"
                                        android:textSize="20dp" />

                                    <EditText
                                        android:id="@+id/ans4"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:fontFamily="@font/bmjua_ttf"
                                        android:gravity="center"
                                        android:hint="4. 정답 입력하기"
                                        android:textSize="20dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/Solution"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:orientation="vertical"
                            android:weightSum="4">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/bmjua_ttf"
                                android:gravity="center"
                                android:text="힌트 입력"
                                android:textColor="@color/orange"
                                android:textSize="30dp" />

                            <FrameLayout
                                android:id="@+id/contentSelectHint"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="3">

                                    <ImageButton
                                        android:id="@+id/hintWriting"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:background="#00ff0000"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/hint_writing" />

                                    <ImageButton
                                        android:id="@+id/hintVideo"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:background="#00ff0000"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/hint_video" />

                                    <ImageButton
                                        android:id="@+id/noHint"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:background="#00ff0000"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/hint_no" />


                                </LinearLayout>

                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:weightSum="6">

                        <ImageButton
                            android:id="@+id/script"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#00ff0000"
                            android:scaleType="centerCrop"
                            android:src="@drawable/read_script" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/question_check"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:background="#00ff0000"
                                android:scaleType="centerCrop"
                                android:src="@drawable/check1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:orientation="horizontal"/>

                        <ImageButton
                            android:id="@+id/check"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#00ff0000"
                            android:src="@drawable/finish_making"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>