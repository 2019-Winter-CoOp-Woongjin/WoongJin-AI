<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="11"
        android:background="@drawable/mypage_background"
        android:padding="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="7dp"
            android:weightSum="11">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="#00ff0000"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:src="@drawable/go_home"/>



            <ImageButton
                android:id="@+id/record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/record_room"
                android:scaleType="fitCenter"
                />


            <ImageButton
                android:id="@+id/FriendList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="#00FFFFFF"
                android:layout_margin="5dp"
                android:src="@drawable/friend_room"
                android:scaleType="fitCenter"
                />

            <Button
                android:id="@+id/CoinRecord"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:text="코인 기록실"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/ic_menu_format"
                android:fontFamily="@font/bmjua_ttf"
                android:textColor="@color/white"
                android:textSize="27dp"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/ic_menu_frame"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:id="@+id/userName1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="test"
                    android:fontFamily="@font/bmjua_ttf"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:id="@+id/userGrade1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="test"
                    android:fontFamily="@font/bmjua_ttf"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_coin"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/userCoin"
                    android:fontFamily="@font/bmjua_ttf"
                    android:textSize="30dp"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="2"
                android:background="@drawable/ic_profile_format"
                android:padding="30dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    >
                    <ImageView
                        android:id="@+id/myFace"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:padding="5dp"
                        android:src="@drawable/kakao_default_profile_image"
                        android:scaleType="fitCenter"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:padding="3dp"
                        >
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/changePicture"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:src="@drawable/pick_profile"
                            android:scaleType="fitCenter"
                            android:background="#00FFFFFF"
                            />
                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/upload"
                            android:src="@drawable/upload_profile"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:scaleType="fitCenter"
                            android:background="#00FFFFFF"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:orientation="vertical"
                        android:weightSum="2"
                        >

                        <TextView
                            android:id="@+id/userSchool"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:text="ㅁㅁ초등학교"
                            android:fontFamily="@font/bmjua_ttf"
                            />

                        <TextView
                            android:id="@+id/userGrade"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25dp"
                            android:text="ㅁ학년"
                            android:fontFamily="@font/bmjua_ttf"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:text="김웅진"
                        android:fontFamily="@font/bmjua_ttf"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:padding="5dp"
                android:weightSum="3.1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.6"
                    android:padding="10dp"
                    android:background="@drawable/hoonjang_frame"
                    android:orientation="vertical"
                    android:weightSum="15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        //첫번째줄 그림세개

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/attend_wang"
                            android:src="@drawable/ic_medal_secret"
                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/read_lot_wang"
                            android:src="@drawable/ic_medal_secret"
                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/quiz_wang"
                            android:src="@drawable/ic_medal_secret"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/attend_wang_date"
                            android:text="\?"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textSize="25dp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/read_lot_wang_date"
                            android:text="\?"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textSize="25dp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/quiz_wang_date"
                            android:text="\?"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textSize="25dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/quiz_hunter"
                            android:src="@drawable/ic_medal_secret"
                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/bomb_master"
                            android:src="@drawable/ic_medal_secret"
                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/bucket_wang"
                            android:src="@drawable/ic_medal_secret"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/quiz_hunter_date"
                            android:text="\?"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textSize="25dp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/bomb_master_date"
                            android:text="\?"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textSize="25dp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/bucket_wang_date"
                            android:text="\?"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textSize="25dp"
                            />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:weightSum="7.3"
                    android:padding="10dp"
                    android:background="@drawable/record_frame"
                    android:orientation="vertical"

                    >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:text="나의 성과"
                            android:textColor="@color/black"
                            android:scrollbarSize="30dp"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textSize="30dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="3.4"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.4"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="저번 주"
                                android:fontFamily="@font/bmjua_ttf"
                                android:gravity="center"
                                android:textSize="28dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="이번 주"
                                android:fontFamily="@font/bmjua_ttf"
                                android:gravity="center"
                                android:textColor="@color/orange"
                                android:textSize="28dp"/>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:weightSum="3.4"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:text="맞춘 문제 수"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            />


                        <TextView
                            android:id="@+id/lastCorrectCnt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="@font/bmjua_ttf"
                            android:textSize="30dp"
                            android:text="데이터 없음"
                            />

                        <TextView
                            android:id="@+id/thisCorrectCnt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="@font/bmjua_ttf"
                            android:textSize="30dp"
                            android:textColor="@color/orange"
                            android:text="데이터 없음"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:weightSum="3.4"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:text="받은 좋아요 수"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            />


                        <TextView
                            android:id="@+id/lastLikeCnt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="@font/bmjua_ttf"
                            android:textSize="30dp"
                            android:text="데이터 없음"/>

                        <TextView
                            android:id="@+id/thisLikeCnt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="@font/bmjua_ttf"
                            android:textSize="30dp"
                            android:textColor="@color/orange"
                            android:text="데이터 없음"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:weightSum="3.4"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:text="문제 평균 레벨"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            />

                        <TextView
                            android:id="@+id/lastLevel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="@font/bmjua_ttf"
                            android:textSize="30dp"
                            android:text="데이터 없음"/>

                        <TextView
                            android:id="@+id/thisLevel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="@font/bmjua_ttf"
                            android:textSize="30dp"
                            android:textColor="@color/orange"
                            android:text="데이터 없음"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:orientation="horizontal"
                        android:weightSum="3.4"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:text="해체한 폭탄 수"
                            android:fontFamily="@font/bmjua_ttf"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            />


                        <TextView
                            android:id="@+id/lastSolveBombCnt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="@font/bmjua_ttf"
                            android:textSize="30dp"
                            android:text="데이터 없음"
                            />

                        <TextView
                            android:id="@+id/thisSolveBombCnt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:fontFamily="@font/bmjua_ttf"
                            android:textSize="30dp"
                            android:textColor="@color/orange"
                            android:text="데이터 없음"
                            />

                    </LinearLayout>



            </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="10dp"
                android:weightSum="2.5"
                android:orientation="vertical"
                >
                <ImageButton
                    android:src="@drawable/quiz_made"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:id="@+id/QList"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:background="#00FFFFFF"
                    />

                <ImageButton
                    android:id="@+id/LikeList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/quiz_like"
                    android:scaleType="fitCenter"
                    android:background="#00FFFFFF"
                    />

                <ImageButton
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logout"
                    android:scaleType="fitCenter"
                    android:background="#00FFFFFF"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


